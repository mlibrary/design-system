    <script>
      (function () {
        const copiers = document.querySelectorAll('[data-copy-code]');
        const neutralMsg = "Copy HTML";
        const successMsg = 'Copied <span aria-hidden="true">üñ®Ô∏è</span> !';

        function powerUp() {
          copiers.forEach(copyTimeNow);
        }

        function copierYouThereHello() {
          return !!navigator.clipboard
        }

        function success(btn) {
          // Make this an alert, so that it
          // announces the status to the user.
          btn.setAttribute('role', 'alert');
          btn.innerHTML = successMsg;

          setTimeout(function () {
            // Remove alert, we don't need to
            // let them know the button returned
            // to it's original state.
            btn.removeAttribute('role');
            btn.innerText = neutralMsg;
          }, 3000)
        }

        function failure(btn, err) {
          btn.setAttribute('disabled', true);
          btn.innerText = "Copier is broken"
          console.error('Failed to copy to clipboard!', err)
        }

        function copyTimeNow(btn) {
          if (!copierYouThereHello()) 
            return

            // Enable this feature.
          btn.removeAttribute('disabled');

          // The HTML is saved as stringified JSON on the
          // button itself under [data-html].
          const HTML = JSON
            .parse(btn.getAttribute("data-html"))
            .html;

          btn.addEventListener('click', function (event) {
            try {
              navigator
                .clipboard
                .writeText(HTML)
                .then(success(btn))

            } catch (err) {
              failure(btn, err)
            }
          });
        }

        powerUp();
      }());
    </script>
  </body>
