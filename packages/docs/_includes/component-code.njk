<div class="example">
  <h3>Preview</h3>
  <div class="example__preview">
    {{ component.example | safe }}
  </div>

  <h3 class="visually-hidden">HTML</h3>
  {% highlight "html" %}
  {{ component.example | safe }}
  {% endhighlight %}
</div>

<div class="example__actions">
  <button class="button button--loud" disabled data-copier='{
      "text": "{{ component.example | safe | replace('"', '\\"') | replace('\'', '&#39;') | replace('\n', '\\n') }}"
    }'>Copy HTML</button>
  <form action="https://codepen.io/pen/define" method="POST" target="_blank">
    <input
    type="hidden"
    name="data"
    value='{
      "title": "{{ component.name }} — Design System — University of Michigan Library",
      "html": "{{ site.codepen_html_comment | safe | replace('"', '\\"') | replace('\'', '&#39;') | replace('\n', '\\n')}} {{ component.example | safe | replace('"', '\\"') | replace('\'', '&#39;') | replace('\n', '\\n') }}",
      "css_external": "https://unpkg.com/@umich-lib/css@v1/dist/umich-lib.css",
      "js_external": "https://unpkg.com/@umich-lib/components@v1/dist/umich-lib/umich-lib.js",
      "layout": "left",
      "editors": "100"
    }'/><input type="submit" value="Edit in CodePen" 
    class="button" />
  </form>
</div>